/* addbook.wxss */
page{
  background-color:#ededed;
}
.header{height:50px;background-color:#fff;margin-top:20rpx;display: flex;padding:0 30rpx;align-items: center;font-size:30rpx;color:#000;border-bottom: 10px solid #ededed;}
.header image{width:47rpx;height:50rpx;}
.header text{margin-left:15rpx;width:300rpx;}
.header button{width:150rpx;height:60rpx;line-height: 60rpx;font-size:30rpx;}
.create{background:#1f5cd8;color:#fff;}
.write{color:#1f5cd8;border:3rpx solid #1f5cd8;}
.box{display:flex;height:auto;border-bottom: 10rpx solid #ededed;padding:20rpx 30rpx;box-sizing:border-box;background:#fff;}
.box_left{width:120rpx;height:auto;display: flex;align-items: center;}
.box_left image{width:120rpx;height:120rpx;background:#ededed;}
.box_center{flex:1;display: flex;flex-direction: column;padding-left:10rpx;justify-content: space-around;}
.box_center .title{font-size:30rpx;color:#333;line-height:1.2;overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;}
.box_center .describe{font-size:24rpx;color:#808080;line-height:1.2;overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;margin:10rpx 0;}
.box_center .security{height:46rpx;font-size:24rpx;display:flex;align-items:center;}
.box_center .security image{width:36rpx;height:36rpx;margin-right:10rpx;}
.box_right{width:150rpx;display: flex;flex-direction: column;align-items: flex-start;}
.persons{display: flex;flex-direction: row;color:#666;align-items: center;justify-content:flex-end;height:32rpx;width:150rpx;}
.persons image{width:28rpx;height:31rpx;margin-top:-5rpx;}
.persons text{font-size:24rpx;line-height:50rpx;padding-left:10rpx;box-sizing: border-box;}
.time{width:140rpx;font-size:24rpx;color:#666;flex:1;display:flex;align-items: flex-end;justify-content: flex-end;}
.time view{text-align: right;}
.tips{height:60rpx;text-align: center;font-size:28rpx;color:#333;margin:20rpx auto;}
::-webkit-scrollbar
{
    width: 0px;
    height: 0px;
}
.reduce{width:50rpx;display: flex;align-items: center;justify-content: center;}
.reduce image{width:36rpx;height:36rpx;}
.write2{color:#F83939;border:3rpx solid #F83939;}