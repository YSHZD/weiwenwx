/* myworks.wxss */
page{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.wrapper{
    position: relative;
}

.head{
    height: 240rpx;
    position: relative;
    overflow: hidden;
    border-bottom: 30rpx solid #ededed;
}
.head .avatar{
    position: absolute;
    top:50rpx;
    left:50rpx;
    width: 140rpx;
    height: 140rpx;
    border: 2rpx solid rgba(244, 245, 247, 0.7);
    border-radius: 100%;
    background: #fff;
}
.head .right{
   position: absolute;
    top:0;
    right:30rpx;
    width: 20rpx;
    height: 240rpx;
    display: flex;
    align-items: center;
}
.person_info{
  position: absolute;
  top:70rpx;
  left:240rpx;
  color:#fff;
  width:440rpx;
  display:flex;
  flex-direction: column;
}
.nickname{width:100%;color:#fff;font-size:48rpx;display: inline-block;word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box; 
    -webkit-box-orient: vertical; 
    -webkit-line-clamp: 1; 
    overflow: hidden;}
.info_from{font-size:24rpx;margin-top:10rpx;}
.head .avatar image{
  width:140rpx;
  height:140rpx;
  border-radius:50%;
}
.head image{
  width:100%;
}
.done{display: flex;height:110rpx;border-bottom:10rpx solid #ededed;padding:0 30rpx;align-items:center;}
.left{width:70rpx;}
.left image{width:46rpx;height:47rpx;margin-top:10rpx;}
.center{flex:1;font-size:30rpx;}
.right image{width:20rpx;height:34rpx;vertical-align:center;align-items:center;}
