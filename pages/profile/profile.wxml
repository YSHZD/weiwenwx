<!--myworks.wxml-->
<view class="wrapper">
    <view class="head" bindtap='go_edit'>
        <view class="avatar"><image  mode="aspectFill" src="{{avatar}}"></image></view>
        <view class="person_info">
            <text wx:if="{{nickname}}" class="nickname">{{nickname}}</text>
            <text wx:else>匿名</text>
            <text class="info_from" wx:if="{{department}}">{{department}}</text>
            <text class="info_from" wx:else>江西爱美创</text>
        </view>
        <view class="right"><image  mode="aspectFill" src="../../images/right2.png"></image></view>
        <image class="bg" src="../../images/personbg.png"></image>
    </view>
    <view class="done" bindtap='done'>
      <view class="left"><image  mode="aspectFill" src="../../images/done.png"></image></view>
      <view class="center">发起的问卷</view>
      <view class="right"><image  mode="aspectFill" src="../../images/right.png"></image></view>
    </view>
    <view class="done" bindtap='doing'>
      <view class="left"><image  mode="aspectFill" src="../../images/done.png"></image></view>
      <view class="center">参与的问卷</view>
      <view class="right"><image  mode="aspectFill" src="../../images/right.png"></image></view>
    </view>
    <view class="done" bindtap='help'>
      <view class="left"><image  mode="aspectFill" src="../../images/doing.png"></image></view>
      <view class="center">改进意见</view>
      <view class="right"><image  mode="aspectFill" src="../../images/right.png"></image></view>
    </view>
</view>