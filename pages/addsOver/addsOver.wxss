/* pages/addsOver/addsOver.wxss */
page{background-color:#ededed;}
.box{display:flex;height:auto;border-bottom: 30rpx solid #ededed;padding:20rpx 30rpx;box-sizing:border-box;border-top:20rpx solid #ededed;background-color:#fff;}
.box_left{width:120rpx;height:auto;display: flex;align-items: center;}
.box_left image{width:120rpx;height:120rpx;background:#ededed;border-radius:5rpx;}
.box_center{flex:1;display: flex;flex-direction: column;padding-left:10rpx;justify-content:space-around;}
.box_center .title{font-size:30rpx;color:#333;line-height:1.2;overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;}
.box_center .describe{font-size:24rpx;color:#808080;line-height:1.2;overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;margin:10rpx 0;}
.box_center .security{height:46rpx;font-size:24rpx;display:flex;align-items:center;}
.box_center .security image{width:36rpx;height:36rpx;margin-right:10rpx;}
.box_right{width:150rpx;display: flex;flex-direction: column;align-items: flex-start;}
.persons{display: flex;flex-direction: row;color:#666;align-items: center;justify-content:flex-end;height:32rpx;width:150rpx;}
.persons image{width:28rpx;height:31rpx;margin-top:-5rpx;}
.persons text{font-size:24rpx;line-height:50rpx;padding-left:10rpx;box-sizing: border-box;}
.time{width:150rpx;font-size:26rpx;color:#666;flex:1;display:flex;align-items: flex-end;justify-content: flex-end;}
.time view{text-align: right;}
.tips{height:60rpx;text-align: center;font-size:28rpx;color:#333;margin:20rpx auto;}
.content{padding-top:60rpx;display: flex;justify-content: center;flex-direction: column;align-items: center;background-color:#fff;}
.avatar image{width:100rpx;height:100rpx;border-radius: 50%;}
.from{margin-top:20rpx;font-size:30rpx;color:#000;display: flex;flex-direction: column;justify-content: center;align-items: center;}
.from .small{font-size:24rpx;color:#999999;}
.result{margin-top:60rpx;font-size:34rpx;color:#000;display: flex;flex-direction: column;justify-content: center;align-items: center;font-weight:500;margin-bottom: 90rpx;}
.result .small{font-size:24rpx;color:#999999;margin-top:10rpx;}
.go{margin-bottom:20rpx;display: flex;align-items: center;justify-content: center;}
.go button{width:260rpx;height:80rpx;line-height: 80rpx;}
.color{background:#1f5cd8;color:#fff;}
.mr20{margin-right:20rpx;}
.go .long{width:530rpx;}
.isUser .long{width:530rpx;}
.isUser button{width:530rpx;}
.mt20{margin-top:20rpx;}
.wx{display:flex;flex-direction: column;align-items: center;justify-content: center;margin-top:30rpx;}
.wx image{width:310rpx;}
.wx text{font-size:30rpx;color:#999999;margin: 20rpx auto;}
.help_tips{padding:60rpx 30rpx 100rpx;margin-bottom: 100rpx;}
.help_box{display:flex;align-items: center;margin-bottom: 10rpx;}
.help_box image{width:36rpx;height:36rpx;margin-right:10rpx;}
.help_box text{font-size:24rpx;color:#999999;}
.fixed{position: fixed;bottom:0;left:0;width:100%;height:100rpx;background:#fff;border-top:2rpx solid #ededed;display: flex;font-size:30rpx;}
.fixed view{flex:1;display: flex;flex-direction: column;align-items: center;justify-content: center;}
.fixed view image{width:47rpx;height:50rpx;}
.warn{font-size:30rpx;display: flex;align-items: center;margin-bottom: 40rpx;}
.warn icon{margin-right:10rpx;}
.fesh{position:fixed;bottom:120rpx;right:40rpx;}