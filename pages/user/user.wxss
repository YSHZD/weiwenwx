/* pages/index/index.wxss */
page {
  color: #666;
  height: 100%;
  background: #ededed;
  
}
.header{height:270rpx;background:#1f5cd8;display: flex;justify-content: center;flex-direction: column;color:#fff;align-items: center;}
.header .img{height:200rpx;display: flex;align-items: center;justify-content: center;}
.header .txt{flex:1;font-size:28rpx;}
.header image{width:140rpx;height:140rpx;border-radius:50%;}
.content{height:auto;}
.content .box{height:100rpx;margin-bottom:10rpx;background:#fff;padding:0 30rpx;display: flex;align-items: center;font-size:36rpx;color:#333;}
.content .box text{width:180rpx;font-size:34rpx;}
.content .box picker{flex:1;font-size:36rpx;color:#333;}
button{background:#1f5cd8;color:#fff;width:550rpx;height:80rpx;line-height:80rpx;margin:500rpx auto 100rpx;}
.sm{color:#808080;font-size:28rpx;}