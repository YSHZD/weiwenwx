/* pages/answer/answer.wxss */
page{background-color:#ededed;padding-top:20rpx;}
.box{display:flex;height:auto;padding:20rpx 30rpx;box-sizing:border-box;background-color:#fff;}
.box_left{width:120rpx;height:auto;display: flex;align-items: center;}
.box_left image{width:120rpx;height:120rpx;background:#ededed;border-radius:5rpx;}
.box_center{flex:1;display: flex;flex-direction: column;padding-left:10rpx;justify-content: space-around;}
.box_center .title{font-size:30rpx;color:#333;line-height:1.2;overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;padding:0}
.box_center .describe{font-size:24rpx;color:#808080;line-height:1.2;overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;margin:10rpx 0;}
.box_center .security{height:46rpx;font-size:24rpx;display:flex;align-items:center;}
.box_center .security image{width:36rpx;height:36rpx;margin-right:10rpx;}
.box_right{width:150rpx;display: flex;flex-direction: column;align-items: flex-start;}
.persons{display: flex;flex-direction: row;color:#666;align-items: center;justify-content:flex-end;height:32rpx;width:150rpx;}
.persons image{width:28rpx;height:31rpx;margin-top:-5rpx;}
.persons text{font-size:24rpx;line-height:50rpx;padding-left:10rpx;box-sizing: border-box;}
.time{width:150rpx;font-size:24rpx;color:#666;flex:1;display:flex;align-items: flex-end;justify-content: flex-end;}
.time button{width:150rpx;height:60rpx;font-size:30rpx;line-height:60rpx;color:#1f5cd8;border:3rpx solid #1f5cd8;background-color:#fff;margin:0}
.tips{height:60rpx;text-align: center;font-size:28rpx;color:#333;margin:20rpx auto;}
.radios{background:#fff;padding:0 62rpx 20rpx;}
.radios_box{border:2rpx solid #999;border-radius:10rpx;height:auto;display: flex;align-items: center;padding:10rpx;margin-bottom:10rpx;}
.radios_box .radio{display: flex;align-items: center;color:#333;}
.radios_box text{flex:1;font-size:30rpx;color:#333;padding:0 10rpx;word-break: break-all;}
.title{font-size:34rpx;color:#000;padding:36rpx 30rpx 30rpx;word-break: break-all;display: flex;align-items: center;}
.title .title_here{flex:1}
.active{border:2rpx solid #1f5cd8;}
.red{color:red;}
.gray{font-size:24rpx;color:#999999;width:150rpx;display: flex;justify-content: flex-end;align-items: flex-end;}
.radio image{width:200rpx;height:200rpx;}
.move{margin-left:-50rpx;margin-top:60rpx;}
.Input{font-size:30rpx;border:2rpx solid #ededed;width:666rpx;height:140rpx;margin:0 auto;padding:5rpx;}
::-webkit-scrollbar
{
    width: 0px;
    height: 0px;
}
.bg{background-color:#fff;}
button{background:#1f5cd8;color:#fff;width:550rpx;height:80rpx;line-height:80rpx;margin-top:40rpx;margin-bottom:60rpx;}
.bottom{padding:0 30rpx;font-size:30rpx;color:#666666;margin-bottom: 120rpx;}
.bottom view{font-size:24rpx;}
.box .right{flex:1;text-align: right;}
.send{margin-top:10rpx;align-items: center;}
.send text{display: flex;align-items: center;justify-content: center;}
.send image{width:47rpx;height:50rpx;margin-right:10rpx;}
.answers text{display: flex;align-items: center;justify-content: center;}
.answers image{width:47rpx;height:50rpx;margin-right:10rpx;}
.answers{margin-top:10rpx;margin-bottom: 30rpx;align-items: center;}
.answers button{width:150rpx;
height:60rpx;
font-size:30rpx;
line-height:60rpx;
color:#1f5cd8;
border:3rpx solid #1f5cd8;
background-color:#fff;margin:0;
float: right;
}
.reduce{width:50rpx;display: flex;align-items: center;justify-content: center;}
.reduce image{width:36rpx;height:36rpx;}
.goEidt{width:100rpx;display: flex;align-items: center;justify-content: center;}
.goEidt image{width:20rpx;height:34rpx;}
.answers .write2{color:#F83939;border:3rpx solid #F83939;}
.show{width:50rpx;display: flex;align-items: center;justify-content: center;}
.show image{width:40rpx;height:40rpx;}
.add_answer{background:#fff;color:#000;}
.bigUrl{width:100%;padding:20rpx 30rpx;box-sizing: border-box;}
.bigUrl image{width:100%;}
