/* addbook.wxss */
.header{
  border-top:20rpx solid #ededed;
  height:auto;
  padding:0 30rpx;
}
.red{color:red;}
.bigUrl{width:100%;padding:20rpx 30rpx;box-sizing: border-box;}
.bigUrl image{width:100%;}
.gray{font-size:24rpx;color:#999999;}
.Input{font-size:30rpx;border:3rpx solid #ededed;width:666rpx;margin:0 auto;padding:10rpx;border-radius:5rpx;box-shadow: 2rpx 0 2rpx #999999;display:flex;flex-direction: column;justify-content: flex-start;align-items: flex-start;}
.title{font-size:34rpx;color:#000;padding:36rpx 0;word-break: break-all;}
.good{color:green;font-size:28rpx;margin-left:5rpx;float:right;}
.bad{color:red;font-size:28rpx;margin-left:5rpx;float: right;}
.box{border-bottom: 4rpx solid #ededed;display:flex;align-items: center;flex-direction: row;padding:20rpx 30rpx;height:auto;}
.box .left{display:flex;flex-direction: column;justify-content: center;align-items: center;padding-right:20rpx;height:auto;width:auto;}
.box .right{display: flex;flex-direction: column;}
.box .left image{width:100rpx;height:100rpx;border-radius:50%;}
.box .left text{font-size:30rpx;color:#333;}
.box .right text{font-size:24rpx;color:#999999;margin-bottom:10rpx;}
.box .right view{flex:1;background: #88b7d5;word-break: break-all;font-size:28rpx;color:#fff;padding:10rpx;}
.add{position: relative;border-radius: 12rpx;box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);}
.add::before{
			position:absolute;
			content:"";
			height:0;
			width: 0;
			pointer-events: none;
			border: solid transparent;
			border-color: rgba(136, 183, 213, 0);
			border-right-color: #88b7d5;
			border-width: 15rpx;
			top: 50%;
			right: 100%;
			margin-top:-15rpx;
		}
.tips{height:60rpx;text-align: center;font-size:28rpx;color:#333;margin:20rpx auto;}