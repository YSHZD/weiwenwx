/* addbook.wxss */
page{
  background-color:#ededed;
}
.fuck{min-height:40rpx;}
.page{
  background: #ededed;
  border-top:20rpx solid #ededed;
}
.top{display: flex;flex-direction: row;align-items: center;background:#fff;}
.top .log{width:220rpx;min-height:218rpx;display: flex;align-items: center;justify-content: center;}
.top .log image{width:158rpx;height:158rpx;margin:30rpx auto;}
.top .titles{flex:1;display: flex;flex-direction: column;padding:10rpx 30rpx 10rpx 0;box-sizing: border-box;}
.titles textarea{height:100rpx;border: 1px solid #ededed;border-radius:10rpx;width:auto;font-size:30rpx;color:#333;padding:6rpx;}
.titles input{height:100rpx;border: 1px solid #ededed;border-radius:10rpx;width:auto;font-size:30rpx;color:#333;padding:6rpx;}
.titles .describe{margin-top:14rpx;color:#808080;font-size:25rpx;}
.middle{border-top:30rpx solid #ededed;}
.box{display: flex;flex-direction: row;height:100rpx;align-items: center;font-size:30rpx;color:#000;padding:0 30rpx;border-bottom: 4rpx solid #ededed;background:#fff;}
.box image{width:32rpx;height:32rpx;margin-left:10rpx;}
.radio-group{display: flex;align-items: center;flex:1;}
.radio{display: flex;align-items: center;flex-direction: row;margin:0 20rpx;}
.picker{margin-right:20rpx;}
.here{padding-left:60rpx;margin-left:-60rpx;position:relative;z-index:99}
.transpond{border-top:30rpx solid #ededed;display: flex;}
.transpond .left{flex:1;display: flex;flex-direction: column;}
.right{width:120rpx;}
.big{font-size:30rpx;color:#000;}
.small{font-size:20rpx;color:#999}
.correctAnswer{display: flex;}
.correctAnswer .left{flex:1;display: flex;flex-direction: column;}
button{background:#1f5cd8;color:#fff;width:550rpx;height:80rpx;line-height:80rpx;margin-top:60rpx;}
.bottom{display: flex;flex-direction: column;justify-content: center;text-align: center;}
.bottom text{font-size:20rpx;color:#999;margin-top:20rpx;}