.describe{word-break: break-all}
.spacing{
  height: 20rpx;
  background: #eeeeee;
}

.inline-box{
  display: inline-block;
}

.text-left{
  text-align: left;
}

.text-right{
  text-align: right;
}
.text-center{
  text-align: center;
}
/*按钮*/
.btn{
  display: inline-block;
  padding: 10rpx 20rpx;  
}
.btn-lg{
  display: inline-block;
  height: 75rpx;
  width: 200rpx;
  line-height: 75rpx;
  text-align: center;
}

.btn-bule{
  color: #38cfba;
  border: 1rpx solid #38cfba;
  border-radius: 10rpx;
}

.btn-yellow{
  border: 1rpx solid #f1a834;
  border-radius: 6rpx;
  color: #f1a834;
}

.btn-red{
  color: #f63a3a;
  border: 1rpx solid #f63a3a;
  border-radius: 8rpx;
}
.tag{
  display: inline-block;
  padding: 0 10rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 26rpx;
  margin-right: 16rpx;
  font-weight: 300; 
}

.tag-red{
  border: 1rpx solid #f34d4d;
  border-radius: 6rpx;
  color: #f34d4d;
}

.tag-yellow{
  border: 1rpx solid #f1a834;
  border-radius: 6rpx;
  color: #f1a834;
}

/* 图标 */
.icon_default_thumb_up{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  vertical-align: bottom;
}
.icon_default_thumb_up image{
  width: 32rpx;
  height: 32rpx;
}

.icon_comment{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.icon_comment image{
  width: 32rpx;
  height: 32rpx;
}

.icon_right_arrow image{
  width: 14rpx;
  height: 24rpx;
}


